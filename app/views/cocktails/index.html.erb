<div class="container text-center">
  <div class="row">
    <div class="col xs-12 col-sm-6 col-sm-offset-3">
      <h3><%= link_to "ajouter un nouveau cocktail", new_cocktail_path, class:"btn btn-danger btn-large" %></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= render "card", cocktail: cocktail%>
      <%end %>
    </div>
  </div>
</div>

