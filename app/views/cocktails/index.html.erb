<div class="container text-center">
  <div class="row">
    <div class="col xs-12 col-sm-6 col-sm-offset-3">
      <h3><%= link_to "ajouter un nouveau cocktail", new_cocktail_path, class:"btn btn-danger btn-large" %></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="cocktail-list">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-6 col-sm-6 col-md-3">
    <% if cocktail.photo? %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <% else %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
        <%end %>
          <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          <%= link_to "", cocktail_path(cocktail), class:"card-link" %>
        </div>
      </div>
    <%end %>
    </div>
  </div>
</div>






